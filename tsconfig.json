{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "target": "es2016",
    "lib": [
      "dom",
      "es2017.object",
      "es2018",
      "es2021.string",
    ],
    "sourceMap": true,
    "allowJs": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "incremental": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__tests__/**",
    "src/**/__mocks__/**",
  ]
}